<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TMap 지도 영역 -->
    <LinearLayout
        android:id="@+id/linearLayoutTmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 지도 관련 내용은 여기에 추가 -->
    </LinearLayout>

    <!-- 목적지 재검색 및 즐겨찾기 등록 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:paddingTop="16dp"
        android:background="#80000000"> <!-- 반투명 배경 적용 -->

        <Button
            android:id="@+id/btnResearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="2"
            android:padding="12dp"
            android:text="목적지 재검색"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnFavorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="즐겨찾기 등록"
            android:textSize="18sp"/>
    </LinearLayout>

    <!-- 도보 경로 안내 버튼 -->
    <Button
        android:id="@+id/btnWalkRouteNavi"
        android:layout_width="370dp"
        android:layout_height="225dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="도보 경로 안내"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnObjectRecognition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="객체 인식"
        android:visibility="gone" />


</RelativeLayout>